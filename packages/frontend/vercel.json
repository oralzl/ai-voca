{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": null,
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "includeFiles": [
    "api/review/candidates.ts",
    "api/review/submit.ts",
    "api/review/generate.ts",
    "api/review/count.ts",
    "api/review/init.ts",
    "api/favorites/check.ts",
    "api/favorites/list.ts",
    "api/favorites/toggle.ts",
    "api/user/prefs.ts",
    "api/user/stats.ts",
    "api/health.ts",
    "api/words/query.ts"
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}