{
  "build": {
    "command": "cd packages/frontend && npm run build",
    "output": "packages/frontend/dist"
  },
  "runtime": "static",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}